{
  "name": "react-redux-boilerplate",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "~8.11.0",
    "npm": "~5.5.1"
  },
  "dependencies": {
    "@500tech/react-scripts": "^2.1.7",
    "@emotion/core": "10.0.6",
    "@emotion/styled": "10.0.6",
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.13",
    "@types/lodash": "4.14.119",
    "@types/node": "^10.12.18",
    "@types/react": "^16.7.20",
    "@types/react-dom": "^16.0.11",
    "@types/react-intl": "2.3.15",
    "@types/react-loadable": "5.4.3",
    "@types/react-redux": "6.0.12",
    "@types/react-router": "4.4.3",
    "@types/react-router-dom": "4.3.1",
    "@types/redux-actions": "2.3.1",
    "@types/redux-devtools": "3.0.45",
    "@types/superagent": "3.8.6",
    "@types/url-join": "4.0.0",
    "history": "4.7.2",
    "http-server": "0.11.1",
    "lodash": "4.17.5",
    "moment": "2.20.1",
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "react-intl": "2.4.0",
    "react-loadable": "5.3.1",
    "react-redux": "5.0.6",
    "react-router": "4.2.0",
    "react-router-dom": "4.2.2",
    "redux": "3.7.2",
    "redux-actions": "2.2.1",
    "redux-freeze": "0.1.5",
    "redux-logger": "3.0.6",
    "reselect": "3.0.1",
    "styled-components": "3.1.6",
    "superagent": "3.8.2",
    "url-join": "4.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "prettier:all": "prettier --write 'src/**/*.{js,ts,tsx}'",
    "prettier:watch": "onchange 'src/**/*.js' -- prettier --write {{changed}}",
    "precommit": "lint-staged",
    "postcommit": "git reset",
    "heroku-postbuild": "npm run build",
    "start:heroku": "http-server -p ${PORT:=8080} build"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "requirePragma": false
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/.bin/prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.7.1",
    "husky": "0.14.3",
    "jest-enzyme": "6.0.0",
    "lint-staged": "^8.1.0",
    "mimic": "2.0.2",
    "onchange": "3.3.0",
    "typescript": "3.2.2"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
