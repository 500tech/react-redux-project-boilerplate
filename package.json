{
  "name": "react-redux-boilerplate",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "~8.11.0",
    "npm": "~5.5.1"
  },
  "dependencies": {
    "@500tech/react-scripts": "2.1.13",
    "@emotion/core": "10.0.6",
    "@emotion/styled": "10.0.6",
    "@types/enzyme": "3.1.15",
    "@types/enzyme-adapter-react-16": "1.0.3",
    "@types/jest": "23.3.13",
    "@types/lodash": "4.14.120",
    "@types/node": "10.12.18",
    "@types/react": "16.7.20",
    "@types/react-dom": "16.0.11",
    "@types/react-intl": "2.3.15",
    "@types/react-loadable": "5.5.0",
    "@types/react-redux": "7.0.0",
    "@types/react-router": "4.4.3",
    "@types/react-router-dom": "4.3.1",
    "@types/redux-actions": "2.3.1",
    "@types/redux-devtools": "3.0.45",
    "@types/storybook__addon-actions": "3.4.2",
    "@types/storybook__addon-knobs": "4.0.3",
    "@types/storybook__addon-links": "3.3.4",
    "@types/storybook__addon-viewport": "4.1.0",
    "@types/storybook__react": "4.0.1",
    "@types/superagent": "3.8.6",
    "@types/url-join": "4.0.0",
    "emotion-theming": "10.0.6",
    "history": "4.7.2",
    "http-server": "0.11.1",
    "lodash": "4.17.11",
    "moment": "2.23.0",
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "react-intl": "2.8.0",
    "react-loadable": "5.5.0",
    "react-redux": "6.0.0",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "redux": "4.0.1",
    "redux-actions": "2.6.4",
    "redux-freeze": "0.1.7",
    "redux-logger": "3.0.6",
    "reselect": "4.0.0",
    "superagent": "4.1.0",
    "url-join": "4.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "remove-typescript": "react-scripts remove-typescript",
    "prettier:all": "prettier --write 'src/**/*.{js,ts,tsx}'",
    "heroku-postbuild": "npm run build",
    "start:heroku": "http-server -p ${PORT:=8080} build",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "requirePragma": false
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/.bin/prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@storybook/addon-actions": "^5.0.1",
    "@storybook/addon-info": "5.0.1",
    "@storybook/addon-knobs": "5.0.1",
    "@storybook/addon-links": "^5.0.1",
    "@storybook/addon-storysource": "5.0.1",
    "@storybook/addon-viewport": "5.0.1",
    "@storybook/addons": "^5.0.1",
    "@storybook/react": "^5.0.1",
    "add": "2.0.6",
    "babel-loader": "^8.0.5",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.7.1",
    "husky": "1.3.1",
    "jest-enzyme": "7.0.1",
    "lint-staged": "8.1.0",
    "mimic": "2.0.9",
    "prettier": "1.16.4",
    "react-docgen-typescript-webpack-plugin": "1.1.0",
    "storybook-addon-intl": "2.4.0",
    "typescript": "3.2.4"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "post-commit": "git reset",
      "pre-commit": "lint-staged"
    }
  }
}
