{
  "name": "react-redux-boilerplate",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "~8.11.0",
    "npm": "~5.5.1"
  },
  "dependencies": {
    "@500tech/react-scripts": "^1",
    "history": "4.7.2",
    "http-server": "0.11.1",
    "lodash": "4.17.5",
    "moment": "2.20.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-intl": "2.4.0",
    "react-loadable": "5.3.1",
    "react-redux": "5.0.6",
    "react-router": "4.2.0",
    "react-router-dom": "4.2.2",
    "redux": "3.7.2",
    "redux-actions": "2.2.1",
    "redux-freeze": "0.1.5",
    "redux-logger": "3.0.6",
    "reselect": "3.0.1",
    "styled-components": "3.1.6",
    "superagent": "3.8.2",
    "url-join": "4.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "prettier:all": "prettier --write 'src/**/*.js'",
    "prettier:watch": "onchange 'src/**/*.js' -- prettier --write {{changed}}",
    "precommit": "lint-staged",
    "postcommit": "git reset",
    "flow": "flow",
    "heroku-postbuild": "npm run build",
    "start:heroku": "http-server -p ${PORT:=8080} build"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "requirePragma": false
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/.bin/prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "flow-bin": "0.65.0",
    "husky": "0.14.3",
    "jest-enzyme": "^6.0.0",
    "mimic": "2.0.2",
    "onchange": "3.3.0"
  }
}
